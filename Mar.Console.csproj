<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>Console in March</Title>
        <Description>There is no need to copy some useful console tool files into every project.</Description>
        <RepositoryUrl>https://github.com/zhongwcool/Mar.Console.git</RepositoryUrl>
        <PackageReleaseNotes>1. Print message with color</PackageReleaseNotes>
        <PackageVersion>0.1.0</PackageVersion>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="LICENSE" Pack="true" PackagePath=""/>
    </ItemGroup>

</Project>
